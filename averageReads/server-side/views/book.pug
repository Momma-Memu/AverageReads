<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="js/index.js" type="module")
        link(rel="stylesheet", type="text/css" href="/style.css")
        link(rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css")
        title=book.title
    body
        include navbar.pug
        section.section
            div.container.box
                p.title=book.title
                div.tile.is-ancestor
                    div.tile.is-parent.has-text-centered.is-vertical.is-3
                        .tile.is-child.has-text-centered
                            img(src=`${book.image}` width="140" height="180")
                        .tile.is-child.has-text-centered
                            p=book.author
                            p=`Published: ${date}`
                            p=`Rating: ${book.rating}`
                            p.is-size-7=`Publisher: ${book.publisher}`
                    div.tile.is-parent.is-vertical.is-9.has-text-centered
                        .tile.is-child.is-centered
                            p=book.description
                        div.tile.is-child.is-centered(class=`get-book ${bookId}`)
                            button.button.is-outlined.is-primary.mr-1.notification(id="want-to-read") Want to Read
                            button.button.is-outlined.is-danger.mr-1(id="reading") Reading
                            button.button.is-outlined.is-info.mr-1(id="have-read") Have Read
                include comments.pug
                article(class="media")
                    figure(class="media-left")
                    div(class="media-content")
                        div(class="field")
                        p(class="control")
                            textarea(id="userComment" class="textarea" placeholder="Write your review...")

                        nav(class="level")
                        div(class="level-left")
                            div(class="level-item")
                                a(id="submitButton" class="button is-info") Submit

                p(class="bookId").is-hidden=book.id

        include footer.pug
script(src="js/comment.js")
script(src="js/my-book-options.js")
