<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="js/index.js" type="module")
        link(rel="stylesheet", type="text/css" href="/style.css")
        link(rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css")
        title Welcome | Averagereads
    body
        include navbar.pug
        section.section
            div.container.box
                p.title Books of the Week
                div.tile.is-ancestor.is-vertical.is-12
                    .tile.is-parent.has-text-centered
                            each Book in books
                                .tile.is-child
                                        img(src=`${Book.image}` width="100" height="130" class="botw")
                                        //-p.has-text-weight-medium=Book.title
                                        p.has-text-weight-light=Book.author
                                        p(class="botwId").is-hidden=Book.id
                    div.tile.is-parent
                        .tile.is-child
                            p.title Welcome bros
                        .tile.is-child.box
                            p.title Quote of the day
                            p.is-size-4.pb-2=qod.text
                            p=`-${qod.author}`
                    .tile.is-parent.box
                        .tile.is-child
                            div.title Weather
                                i(class="fas fa-sun").pl-4
                            p.is-size-4 City Title goes here
                            p.pb-6.pt-4 Cloud coverage:
                                i(class="fas fa-cloud" id="cloud").is-size-4.pl-4
                            p.pb-6 Wind Speed:
                                i(class="fas fa-wind" id="wind").is-size-4.pl-4
                            p.pb-6 Temperature:
                                i(class="fas fa-temperature-high" id="temp").is-size-4.pl-4


    include footer.pug
script(src="js/bookOfTheWeek.js")
script(src="js/weather.js")
script(src="https://kit.fontawesome.com/3200f90ea7.js" crossorigin="anonymous")
