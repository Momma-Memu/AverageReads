<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css")
        link(rel="stylesheet", type="text/css" href="/style.css")
        title My Books | Averagereads
        script(src="js/bookshelf.js")
    body
        include navbar.pug
        section.section
            div.container
                div.tile.is-ancestor
                    .tile.is-12.is-parent
                        .tile.is-child.box
                            p.title John Doe
                            div.tile.box.is-4.is-fullwidth
                                img(src="images/116343579_3469288363105231_7752106790805590091_o.jpg", alt="", style="height: 100px")
        section.section
            div.container
                div.tile.is-ancestor(id="event-listener")
                    .tile.is-4.is-parent
                        .tile.is-child.box
                            p.title My Bookshelf
                            div.tile.box.is-12.is-fullwidth
                                p#reading 
                                    a Reading
                            div.tile.box.is-12.is-fullwidth   
                                p#wants-to-read 
                                    a Wants to read
                            div.tile.box.is-12.is-fullwidth    
                                p#have-read 
                                    a I have read
                    .tile.is-8.is-parent.wants-to-read.not-visible
                        .tile.is-child.box
                            p.title I want to read
                                each Book in br
                                    .tile.is-parent.box
                                        div.tile.is-child.is-2
                                            img(src=`${Book.image}` width="100" height="130" class="botw")
                                        div.tile.is-child.is-4
                                            div(style="margin-left: 5%") 
                                                p.has-text-weight-medium=Book.title
                                                p.has-text-weight-light=Book.author
                                            div(style="margin-left: 5%")
                                                button.button.is-danger(id=`details-btn` class=`${Book.id}` style="margin-top: 5%;") Details
                                        .tile.is-child
                                            p.has-text-weight-light=Book.description                             
                    .tile.is-8.is-parent.have-read.not-visible
                        .tile.is-child.box
                            p.title I have read
                                each Book in bhr
                                    .tile.is-parent.box
                                        div.tile.is-child.is-2
                                            img(src=`${Book.image}` width="100" height="130" class="botw")
                                        div.tile.is-child.is-4
                                            div(style="margin-left: 5%") 
                                                p.has-text-weight-medium=Book.title
                                                p.has-text-weight-light=Book.author
                                            div(style="margin-left: 5%")
                                                button.button.is-danger(id=`details-btn` class=`${Book.id}` style="margin-top: 5%;") Details
                                        .tile.is-child
                                            p.has-text-weight-light=Book.description                             
                    .tile.is-8.is-parent.reading.not-visible
                        .tile.is-child.box
                            p.title I'm reading
                                each Book in bwtr
                                    .tile.is-parent.box
                                        div.tile.is-child.is-2
                                            img(src=`${Book.image}` width="100" height="130" class="botw")
                                        div.tile.is-child.is-4
                                            div(style="margin-left: 5%") 
                                                p.has-text-weight-medium=Book.title
                                                p.has-text-weight-light=Book.author
                                            div(style="margin-left: 5%")
                                                button.button.is-danger(id=`details-btn` class=`${Book.id}` style="margin-top: 5%;") Details
                                        .tile.is-child
                                            p.has-text-weight-light=Book.description                             
        include footer.pug